{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gestion des Utilisateurs</h1>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Nom</th>
                        <th>Rôles</th>
                        <th>Points</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.name }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-primary">{{ role }}</span>
                                {% endfor %}
                            </td>
                            <td>{{ user.points }}</td>
                            <td>
                                {% if user.actif %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                                    <form method="post" action="{{ path('app_admin_user_toggle', {'id': user.id}) }}" style="display: inline-block">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                        <button class="btn btn-sm {{ user.actif ? 'btn-warning' : 'btn-success' }}">
                                            {{ user.actif ? 'Désactiver' : 'Activer' }}
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" style="display: inline-block">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button class="btn btn-sm btn-danger">Supprimer</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">Aucun utilisateur trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 