{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block stylesheets %}
    <style>
        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .admin-header {
            background: linear-gradient(135deg, var(--primary-color), var(--dark-bg));
            color: white;
            padding: 3rem 2rem;
            border-radius: 20px;
            margin-bottom: 3rem;
            position: relative;
            overflow: hidden;
        }

        .admin-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.5;
        }

        .admin-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .admin-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .admin-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .admin-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-decoration: none;
            color: inherit;
        }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.2);
        }

        .admin-card-icon {
            font-size: 2.5rem;
            color: var(--secondary-color);
            margin-bottom: 1rem;
        }

        .admin-card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .admin-card-description {
            color: #666;
            font-size: 1.1rem;
            line-height: 1.5;
        }

        .admin-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .stat-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: #666;
            font-size: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="admin-container">
        <div class="admin-header">
            <h1 class="admin-title">
                <i class="bi bi-shield-lock"></i>
                Administration
            </h1>
            <p class="admin-subtitle">
                Gérez votre boutique et vos utilisateurs
            </p>
        </div>

        <div class="admin-grid">
            <a href="{{ path('app_admin_produit_index') }}" class="admin-card">
                <div class="admin-card-icon">
                    <i class="bi bi-box-seam"></i>
                </div>
                <h2 class="admin-card-title">Gestion des Produits</h2>
                <p class="admin-card-description">
                    Ajoutez, modifiez ou supprimez des produits de votre catalogue.
                </p>
            </a>

            <a href="{{ path('app_admin_users') }}" class="admin-card">
                <div class="admin-card-icon">
                    <i class="bi bi-people"></i>
                </div>
                <h2 class="admin-card-title">Gestion des Utilisateurs</h2>
                <p class="admin-card-description">
                    Gérez les comptes utilisateurs et leurs permissions.
                </p>
            </a>

            <a href="#" class="admin-card">
                <div class="admin-card-icon">
                    <i class="bi bi-graph-up"></i>
                </div>
                <h2 class="admin-card-title">Statistiques</h2>
                <p class="admin-card-description">
                    Consultez les statistiques de votre boutique.
                </p>
            </a>
        </div>

        <div class="admin-stats">
            <div class="stat-card">
                <div class="stat-value">
                    <i class="bi bi-box-seam"></i>
                    {{ produits|length }}
                </div>
                <div class="stat-label">Produits en catalogue</div>
            </div>

            <div class="stat-card">
                <div class="stat-value">
                    <i class="bi bi-people"></i>
                    {{ users|length }}
                </div>
                <div class="stat-label">Utilisateurs inscrits</div>
            </div>

            <div class="stat-card">
                <div class="stat-value">
                    <i class="bi bi-cart"></i>
                    {{ commandes|length }}
                </div>
                <div class="stat-label">Commandes totales</div>
            </div>
        </div>
    </div>
{% endblock %}
