{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Modifier mon profil</h1>

                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                            <div class="mb-3">
                                {{ form_row(form.name) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.email) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.avatar) }}
                                {% if app.user.avatar %}
                                    <div class="mt-2">
                                        <img src="{{ app.user.avatar }}" alt="Avatar actuel" class="img-thumbnail" style="max-width: 150px;">
                                    </div>
                                {% endif %}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.plainPassword) }}
                                <small class="form-text text-muted">Laissez vide si vous ne souhaitez pas changer votre mot de passe</small>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_profile') }}" class="btn btn-secondary">Retour</a>
                                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 