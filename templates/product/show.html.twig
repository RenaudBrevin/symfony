{% extends 'base.html.twig' %}

{% block title %}{{ produit.name }}{% endblock %}

{% block stylesheets %}
    <style>
        .product-detail {
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-top: 2rem;
        }

        .product-header {
            margin-bottom: 2rem;
            position: relative;
        }

        .product-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .product-description {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #666;
            margin-bottom: 2rem;
        }

        .product-price {
            font-size: 2rem;
            font-weight: 600;
            color: var(--accent-color);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .product-price i {
            font-size: 1.5rem;
        }

        .product-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn-buy {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 25px;
            font-weight: 500;
            font-size: 1.1rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            flex: 1;
            text-align: center;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-buy:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            color: white;
        }

        .btn-back {
            background: #f8f9fa;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            padding: 1rem 2rem;
            border-radius: 25px;
            font-weight: 500;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-back:hover {
            background: var(--primary-color);
            color: white;
        }

        .login-alert {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border: none;
            border-radius: 15px;
            padding: 1.5rem;
            margin-top: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .login-alert i {
            font-size: 2rem;
            color: var(--primary-color);
        }

        .login-alert a {
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .login-alert a:hover {
            color: var(--primary-color);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="product-detail">
            <div class="product-header">
                <h1 class="product-title">{{ produit.name }}</h1>
                <p class="product-description">{{ produit.description }}</p>
                <div class="product-price">
                    <i class="bi bi-coin"></i>
                    {{ produit.price }} points
                </div>
                
                {% if app.user %}
                    <form method="post" action="{{ path('app_produit_acheter', {'id': produit.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('acheter' ~ produit.id) }}">
                        <button type="submit" class="btn-buy">
                            <i class="bi bi-cart-plus"></i>
                            Acheter avec {{ produit.price }} points
                        </button>
                    </form>
                {% else %}
                    <div class="login-alert">
                        <i class="bi bi-info-circle"></i>
                        <div>
                            <a href="{{ path('app_login') }}">Connectez-vous</a> pour acheter ce produit.
                        </div>
                    </div>
                {% endif %}

                <div class="product-actions">
                    <a href="{{ path('app_produit_index') }}" class="btn-back">
                        <i class="bi bi-arrow-left"></i>
                        Retour Ã  la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 