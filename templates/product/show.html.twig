{% extends 'base.html.twig' %}

{% block title %}{{ produit.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h1>{{ produit.name }}</h1>
                <p class="lead">{{ produit.description }}</p>
                <p class="h3 text-primary">{{ produit.price }} points</p>
                
                {% if app.user %}
                    <form method="post" action="{{ path('app_produit_acheter', {'id': produit.id}) }}" class="mt-4">
                        <input type="hidden" name="_token" value="{{ csrf_token('acheter' ~ produit.id) }}">
                        <button type="submit" class="btn btn-primary btn-lg">
                            Acheter avec {{ produit.price }} points
                        </button>
                    </form>
                {% else %}
                    <div class="alert alert-info mt-4">
                        <a href="{{ path('app_login') }}" class="alert-link">Connectez-vous</a> pour acheter ce produit.
                    </div>
                {% endif %}

                <div class="mt-4">
                    <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 